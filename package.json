{
  "name": "@violentmonkey/shortcut",
  "version": "1.0.1",
  "description": "Register a shortcut for a function",
  "author": "Gerald <i@gerald.top>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "scripts": {
    "dev": "rollup -wc rollup.conf.js",
    "prebuild": "npm run ci && npm run clean",
    "build": "npm run build:js",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "test": "cross-env BABEL_ENV=test tape -r ./test/mock/register 'test/**/*.test.js'",
    "ci": "npm run lint && npm run test",
    "cov": "nyc --reporter=text --reporter=html npm test",
    "cov:open": "open coverage/index.html",
    "clean": "del dist",
    "build:js": "rollup -c rollup.conf.js"
  },
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "repository": "git@github.com:violentmonkey/vm-shortcut.git",
  "nyc": {
    "include": [
      "src/**"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/register": "^7.4.4",
    "@gera2ld/plaid": "~1.4.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.4",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.16.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "husky": "^2.3.0",
    "nyc": "^14.1.1",
    "rollup": "^1.12.0",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.2",
    "tape": "^4.10.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.4"
  }
}
